<program>
   <block name="check SSH keys" ignored="false">
      <instrument type="checkSshKeys">
      </instrument>
   </block>
   <block name="repository: parent" id="parent">
      <block name="update the git repository">
         <instrument type="command">
            <property>git</property>
            <property>clone</property>
            <property>git@gitee.com:unidal/parent.git</property>
            <property>parent</property>
         </instrument>
      </block>
      <block name="make code and run tests">
         <instrument type="checkUpdate" order="before">
            <property>start</property>
         </instrument>
         <instrument type="checkUpdate" order="after">
            <property>end</property>
         </instrument>
         <block name="set JDK version to 1.8">
            <instrument type="command">
               <property>jenv</property>
               <property>local</property>
               <property>1.8</property>
            </instrument>
            <instrument type="command">
               <property>jenv</property>
               <property>version-name</property>
            </instrument>
         </block>
         <block name="run the unit tests">
            <instrument type="command">
               <property>mvn</property>
               <property>test</property>
               <property>-N</property>
            </instrument>
            <status ignored="false" skipped="false" error="true">
               <message>error message</message>
            </status>
         </block>
         <block name="clean install the artifacts">
            <instrument type="command">
               <property>mvn</property>
               <property>clean</property>
               <property>install</property>
               <property>-Dmaven.test.skip</property>
               <property>-N</property>
            </instrument>
         </block>
      </block>
   </block>
   <block id="cat" name="repository: cat">
      <depend-on>frameworks</depend-on>
      <depend-on>maven-plugins</depend-on>
      <depend-on>test-frameworks</depend-on>
   </block>
</program>